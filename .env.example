# Pipedrive API Token (Bearer token)
PIPEDRIVE_API_TOKEN=your_pipedrive_api_token_here

# Pipedrive API Base URL (default: https://api.pipedrive.com/v2)
PIPEDRIVE_API_BASE=https://api.pipedrive.com/v2

# Pipedrive Company Domain (for generating deal URLs)
# Example: yourcompany.pipedrive.com
PIPEDRIVE_COMPANY_DOMAIN=yourcompany.pipedrive.com

# MCP Authentication Token (required if not localhost)
# Used to authenticate MCP client connections
MCP_AUTH_TOKEN=your_mcp_auth_token_here

# Default timezone for date calculations
DEFAULT_TIMEZONE=Europe/Madrid

# Cache TTL in seconds (optional, default: 3600)
CACHE_TTL_SECONDS=3600

# Maximum items per section (optional, default: 50)
MAX_ITEMS_PER_SECTION=50

# Transport mode: stdio, http, or sse (optional, default: stdio)
TRANSPORT_MODE=stdio

# HTTP Server Port (optional, default: 3000, only used if TRANSPORT_MODE is http or sse)
HTTP_PORT=3000
